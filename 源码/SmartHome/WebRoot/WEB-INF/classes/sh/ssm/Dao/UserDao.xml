<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<!--namespace的命名空间，作用对sql进行分类化管理，实现sql的隔离  -->
<mapper  namespace="sh.ssm.Dao.UserDao">
    <!-- 在配置文件中配置很多的sql语句 -->
    <!-- 通过select执行数据库的查询 
     id用于表示映射文件中的sql，成为statement的id
     #{}表示占位符
    -->
    <select id="findUserById" parameterType="int" resultType="User">
    SELECT  * FROM user_info WHERE id=#{id} 
    </select>
   
    <!-- %${value}% 不加任何修饰的拼接到sql语句中，并且括号内只能用value-->
</mapper>